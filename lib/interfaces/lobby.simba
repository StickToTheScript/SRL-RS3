procedure TRSLobby.__init();
begin
  with (Self) do
  begin
    name := 'RS Lobby';
    ID := ID_INTERFACE_LOBBY;
    parentID := -1;
    isStatic := true;
    setBounds([21, 110, 782, 587]);
